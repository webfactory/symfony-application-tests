{
    "name": "webfactory/symfony-application-tests",
    "description": "Contains several generic test scenarios that can be applied to Symfony 2 applications.",
    "keywords": ["Symfony", "tests", "testing", "functional tests", "integration tests"],
    "license": "MIT",
    "authors": [
        {
            "name": "webfactory GmbH",
            "email": "info@webfactory.de",
            "homepage": "http://www.webfactory.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.10,<6",
        "symfony/framework-bundle": "~2.3",
        "symfony/form": "~2.3",
        "symfony/validator": "~2.3",
        "twig/twig": "~1.14",
        "jms/security-extra-bundle": "~1.5",
        "doctrine/common": "~2.4",
        "phpunit/phpunit": "~3.7 | ~4.0"
    },

    "require-dev": {
        "symfony/browser-kit": "~2.2",
        "symfony/twig-bundle": "~2.3",
        "sensio/framework-extra-bundle": "~2.3",
        "symfony/web-profiler-bundle": "~2.3",

        "squizlabs/php_codesniffer": "~1.5",
        "phpmd/phpmd": "~2.0",
        "sebastian/phpcpd": "~2.0",
        "mayflower/php-codebrowser": "~1.1",
        "phploc/phploc": "~2.0",
        "pdepend/pdepend": "~2.0"
    },

    "autoload": {
        "psr-0": {
            "Webfactory\\Tests": "src/",
            "Webfactory\\Constraint": "src/",
            "Webfactory\\Util": "src/"
        }
    },

    "autoload-dev": {
        "psr-0": {
            "Webfactory\\TestBundle": "tests/_files/test-application/src"
        },
        "classmap": [
            "tests/_files/test-application/app/TestKernel.php",
            "tests/Webfactory/Constraint/_files"
        ],
        "files": [
            "tests/_files/test-application/app/bootstrap.php"
        ]
    }
}
